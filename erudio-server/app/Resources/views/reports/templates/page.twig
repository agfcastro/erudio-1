<dynamic-page encoding="UTF-8" page-size="{% block pageType %}a4{% endblock %}">
    <placeholders>
        <footer>
            <div height="05px" width="100%" font-size="8px" breakable="false" position="relative">
                <hr margin="0" padding="0" />
                <div padding-top="3px" width="80%" left="50%" position="absolute" float="left" text-align="center" >
                    <p padding="0">
                        <strong>{{instituicao.nomeCompleto}}</strong>
                    </p>
                    <p padding="0">
                        {{instituicao.endereco.enderecoCompleto}}
                    </p>
                    <p padding="0">
                        E-mail: {{instituicao.email}}
                    </p>
                </div>
                <div padding="0" font-size="8px" position="relative" float="right" width="20%">
                    <p margin-top="17px" text-align="right">Impresso em: {{"now"|date("d/m/Y H:i")}}</p>
                </div>
            </div>
        </footer>
        <header>
            {% block header %}
                <div height="{% block headerHeight %}60px{% endblock %}" width="100%">
                    <div width="50%" float="left">
                        <img width="50%" src="bundles/report/brasao-municipal.png" />
                    </div>
                    <div position="absolute" top="50px" right="0" text-align="center">
                        <div margin-top="0" margin-bottom="2px">
                            {% block title %}Relat√≥rio Erudio{% endblock %}
                            <h3>{{instituicao.nomeCompleto}}</h3>
                        </div>
                    </div>
                    <div position="absolute" float="right" top="50px" text-align="right" width="230px">
                        <div margin-top="0" margin-bottom="2px">
                            {% block info %}{% endblock %}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </header>
    </placeholders>
    {% block content %}{% endblock %}
</dynamic-page>
