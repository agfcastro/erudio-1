{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block headerTitle %}DGP > Formações > {{formacao.nome}} > Encontros{% endblock %}

{% block body %}
    <a class="btn btn-danger" href="{{path('dgp_formacao_atualizar', {'formacao': formacao.id})}}">Voltar para a Tela de Edição</a>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Data</th>
                <th class="text-center">Conteúdo</th>
                <th class="text-center">Carga Horária</th>
                <th class="text-center">Opções</th>
            </tr>
        </thead>
        <tbody>
            {% for encontro in formacao.encontros %}
                <tr>
                    <td class="text-center">{{encontro.dataRealizacao|date('d/m/Y')}}</td>
                    <td class="text-center">{{encontro.conteudo}}</td>
                    <td class="text-center">{{encontro.cargaHoraria}}</td>
                    <td class="text-center">
                        <a href="{{path('dgp_formacao_excluirEncontro', {'formacao': formacao.id, 'encontro': encontro.id})}}">
                            <img title="Excluir" style="cursor: pointer; width: 16px;" src="{{asset('lib/images/delete.png')}}" />
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                {{form_start(form)}}
                <td>{{form_widget(form.dataRealizacao, {'attr': {'class': 'form-control datepickerSME'} })}}</td>
                <td>{{form_widget(form.conteudo, {'attr': {'class': 'form-control'} })}}</td>
                <td>{{form_widget(form.cargaHoraria, {'attr': {'class': 'form-control'} })}}</td>
                <td>{{form_widget(form.btnSalvar, {'attr': {'class': 'btn btn-primary'} })}}</td>
                {{form_end(form)}}
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script type="text/javascript">
        
    </script>
{% endblock %}
