{% extends 'PublicacaoBundle:Index:menu.html.twig' %}

{% block headerTitle %}Publicações SME > Categorias{% endblock %}

{% block page %}
    <div class="row">
        <div id="page" class="col-lg-10">
             <a class="back-btn" href="{{ path('publicacao_categorias', {'id': grupo.id}) }}"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Voltar</a>
             <br /><br />
            
             <h4>Editar categoria no grupo {{ grupo.nomeExibicao }}</h4>
             
             <div class="row" id="formErrors">
                {{ erros | raw }}
             </div>
             
             {{ form_start(form, { 'action': path('publicacao_categorias_editar', { 'id': categoria.id })}) }}
                <div style="display: none;" class="col-md-6">
                    <label for="GrupoForm_nome">Nome *</label>
                    {{ form_widget(form.nome) }}
                </div>
                <div class="col-md-10">
                    <label for="GrupoForm_nomeExibicao">Nome de Exibição *</label>
                    {{ form_widget(form.nomeExibicao) }}
                </div>
                <div style="display: none;" class="col-md-6">
                    <label for="GrupoForm_nome">Grupo</label>
                    {{ form_widget(form.grupo) }}
                </div>
                <div style="display: none;" class="col-md-6">
                    <label for="GrupoForm_nomeExibicao">Categoria</label>
                    {{ form_widget(form.categoria) }}
                </div>
                <div style="margin-top: 20px;" class="col-md-2">
                    {{ form_row(form.Salvar) }}
                </div>
             {{ form_end(form) }}
        </div>
    </div>
{% endblock %}