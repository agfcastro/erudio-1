{% extends 'PublicacaoBundle:Index:menu.html.twig' %}

{% block headerTitle %}Publicações SME > Grupos{% endblock %}

{% block page %}
    <div class="row">
        <div id="page" class="col-lg-10">
             <h4>Adicionar Grupo</h4>
             
             <div class="row" id="formErrors">
                {{ erros | raw }}
             </div>
             
             <div class="row">
                {{ form_start(form, { 'action': path('publicacao_grupos')}) }}
                   <div style="display: none;" class="col-md-6">
                       <label for="GrupoForm_nome">Nome *</label>
                       {{ form_widget(form.nome) }}
                   </div>
                   <div class="col-md-10">
                       <label for="GrupoForm_nomeExibicao">Nome de Exibição *</label>
                       {{ form_widget(form.nomeExibicao) }}
                   </div>
                   <div style="margin-top: 10px;" class="col-md-2">
                       {{ form_row(form.Salvar) }}
                   </div>
                {{ form_end(form) }}
             </div>
             
             <hr />
             <h4>Lista de Grupos</h4>
             
             <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome de Exibição</th>
                        <th>Nome</th>
                        <th class="text-center">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    {% for grupo in grupos %}
                        <tr>
                            <td>{{ grupo.nomeExibicao }}</td>
                            <td>{{ grupo.nome }}</td>
                            <td class="text-center">
                                <a class="lnkEditar" href="{{path('publicacao_grupos_editar', { 'id': grupo.id })}}">
                                    <span title="Editar" class="glyphicon glyphicon-edit"></span>
                                </a>
                                    |
                                <a class="lnkExcluir" href="{{path('publicacao_grupos_excluir', { 'id': grupo.id })}}">
                                    <span title="Excluir" class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Não há grupos cadastrados</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}