{% extends 'SuporteTecnicoBundle:Index:index.html.twig' %}

{% block headerTitle %}Suporte Técnico > Anotações > Nova{% endblock %}

{% block page %}
    {{form_start(form)}}
        <div class="row" id="formErrors"> {{ errors|raw }} </div>
        <div class="row">
            <div class="col-lg-12">
                {{form_label(form.descricao)}}
                {{form_widget(form.descricao, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{form_widget(form.btnSalvar, {'attr': {'class': 'btn btn-primary'} })}}
            </div>
        </div>
    {{form_end(form)}}
{% endblock %}
