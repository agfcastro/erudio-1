{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block headerTitle %}Protocolo > Gerência > {{categoria.nome}} > Encaminhados{% endblock %}

{% block body %}
    <ul class="nav nav-tabs">
        {% if is_granted('ROLE_PROTOCOLO_1') %}
            <li><a href="{{url('protocolo_admin_formPesquisa', {'categoria': 1})}}">Requerimentos</a></li>
        {% endif %}
        <li class="active"><a href="#">Encaminhamentos</a></li>
    </ul>
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Data</th>
                <th>Protocolo</th>
                <th>Encaminhado por</th>
                <th>Motivo / Observação</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            {% for encaminhamento in encaminhamentos %}
                <tr>
                    <td>{{encaminhamento.dataCadastro|date('d/m/Y')}}</td>
                    <td>{{encaminhamento.protocolo.protocolo}}</td>
                    <td>{{encaminhamento.pessoaEncaminha.nome}}</td>
                    <td>
                        {% if encaminhamento.motivo %} 
                            {{encaminhamento.motivo.descricao}}. {{encaminhamento.observacao}}
                        {% else %} 
                            {{encaminhamento.observacao}} 
                        {% endif %}
                    </td>
                    <td> <a class="postLink" href="{{url('protocolo_admin_aceitarEncaminhamento', {'encaminhamento': encaminhamento.id})}}">Aceitar</a> </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-center" colspan="5">Nenhum encaminhamento pendente para você</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
