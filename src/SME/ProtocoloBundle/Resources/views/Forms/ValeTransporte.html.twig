{% extends 'DGPBundle:Servidor:index.html.twig' %}

{% block headerTitle %}Requerimento de Vale Transporte{% endblock %}

{% block page %}
<!-- 
Perguntar pro jhony como faz com o campo oculto "outro" sem gambiarra de javascript
-->
    <form method="post" action="{{url('protocolo_servidor_incluirSolicitacao', {'solicitacao': solicitacao.id})}}">
        <div class="row">
            <div class="col-lg-6">
                <label for="matricula">Matrícula:</label>
                <input type="text" name="matricula" class="form-control" required="true"/>
            </div>
            <div class="col-lg-6">
                <label for="nome_mae">Nome da mãe:</label>
                <input type="text" name="nome_mae" class="form-control" required="true"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table  class="table table-striped table-hover">
                    <tr>
                        <th>Empresas de transporte</th>
                        <th>Vales diários</th>
                        <th>Cartão SIM</th>
                        <th>Descrição dos itinerários</th>
                    </tr>
                    <tr>
                        <th>
                            <label for="empresa"></label>
                            <input type="text" name="empresa" class="form-control" required="true"/>    
                        </th>
                        <th>
                            <label for="quantidade_diaria"></label>
                            <input type="text" name="quantidade_diaria" class="form-control" required="true"/>
                        </th>
                        <th>
                            <label for="cartao_sim"></label>
                            <input type="text" name="cartao_sim" class="form-control" required="true"/>    
                        </th>
                        <th>
                            <label for="itinerarios"></label>
                            <input type="text" name="itinerarios" class="form-control" placeholder="Ex: Residência / Local" required="true"/>    
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <label for="empresa_2"></label>
                            <input type="text" name="empresa_2" class="form-control" />    
                        </th>
                        <th>
                            <label for="quantidade_diaria_2"></label>
                            <input type="text" name="quantidade_diaria_2" class="form-control" />
                        </th>
                        <th>
                            <label for="cartao_sim_2"></label>
                            <input type="text" name="cartao_sim_2" class="form-control" />    
                        </th>
                        <th>
                            <label for="itinerarios_2"></label>
                            <input type="text" name="itinerarios_2" placeholder="Ex: Residência / Local"  class="form-control" />    
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <label for="empresa_3"></label>
                            <input type="text" name="empresa_3" class="form-control" />    
                        </th>
                        <th>
                            <label for="quantidade_diaria_3"></label>
                            <input type="text" name="quantidade_diaria_3" class="form-control" />
                        </th>
                        <th>
                            <label for="cartao_sim_3"></label>
                            <input type="text" name="cartao_sim_3" class="form-control" />    
                        </th>
                        <th>
                            <label for="itinerarios_3"></label>
                            <input type="text" name="itinerarios_3" placeholder="Ex: Residência / Local" class="form-control" />    
                        </th>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label for="verificar">Antes de cadastrar o requerimento, confira se seus locais de trabalho estão corretos. Para alterá-los, acesse a aba de atuações em seu Cadastro.</label>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table  class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <th>Local</th>
                            <th>Função</th>
                        </tr>
                        {% for vinculo in vinculos %}
                            {% for alocacao in vinculo.alocacoes %}
                                <tr>
                                    <td>{{alocacao.localTrabalho.pessoaJuridica.nome}}</td>
                                    <td>{{alocacao.funcaoAtual}} </td>
                              {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <button id="btnIncluir" type="submit" class="btn btn-primary">Incluir</button>
            </div>
        </div>
    </form>
{% endblock %}