{% extends 'DGPBundle:Servidor:index.html.twig' %}

{% block headerTitle %}Requerimento de Mudança de Nome{% endblock %}

{% block page %}
    <form method="post" action="{{url('protocolo_servidor_incluirSolicitacao', {'solicitacao': solicitacao.id})}}">
        <div class="row">
            <div class="col-lg-12">
                <label for="matricula">Matrícula:</label>
                <input type="text" name="matricula" class="form-control" required="true"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label for="verifica nome">Antes de proseguir, certifique-se de ter atualizado seu nome em seu Cadastro.</label>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table  class="table table-striped table-hover">
                    <tr>
                        <td>Nome cadastrado</td>
                        <td>{{pessoa.nome}}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <button id="btnIncluir" type="submit" class="btn btn-primary">Incluir</button>
            </div>
        </div>
    </form>
{% endblock %}