{% extends 'DGPBundle:Servidor:index.html.twig' %}

{% block headerTitle %}Requerimento de Exoneração (Efetivos e Comissionados){% endblock %}

{% block page %}
    <form method="post" action="{{url('protocolo_servidor_incluirSolicitacao', {'solicitacao': solicitacao.id})}}">
        <div class="row">
            <div class="col-lg-6">
                <label for="matricula">Matrícula vinculada ao cargo:</label>
                <input type="text" name="matricula" class="form-control" required="true"/>
            </div>
            <div class="col-lg-6">
                <label for="cargo_exoneracao">Cargo a exonerar:</label>
                <select name="cargo_exoneracao" class="form-control" required="true">
                    {% for vinculo in vinculos %}
                        <option value="{{vinculo.cargo.nome}}"> {{vinculo.cargo.nome}} - {{vinculo.cargaHoraria}} horas ({{vinculo.tipoVinculo.nome}})</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="vinculo_exoneracao">Tipo:</label>
                <select name="vinculo_exoneracao" class="form-control" required >
                    <option value="efetivo">Efetivo</option>
                    <option value="comissionado">Comissionado</option>
                </select>
            </div>
            <div class="col-lg-6">
                <label for="data_desligamento">Data de desligamento:</label>
                <input type="text" name="data_desligamento" class="form-control datepickerSME" required="true"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <button id="btnIncluir" type="submit" class="btn btn-primary">Incluir</button>
            </div>
        </div>
    </form>
{% endblock %}