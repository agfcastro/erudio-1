{% extends 'DGPBundle:Servidor:index.html.twig' %}

{% block headerTitle %}Requerimento de Mudança de Endereço{% endblock %}

{% block page %}
    <form method="post" action="{{url('protocolo_servidor_incluirSolicitacao', {'solicitacao': solicitacao.id})}}">
        <div class="row">
            <div class="col-lg-12">
                <label for="matricula">Matrícula:</label>
                <input type="text" name="matricula" class="form-control" required="true"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label for="verifica endereço">Caso os dados de seu endereço estejam corretos, clique em Incluir. Para modificar o endereço, acesse seu perfil clicando em seu nome no menu superior.</label>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table  class="table table-striped table-hover">
                   <th colspan="2">Dados do endereço</th>
                    <tr>
                        <td>Endereço</td>
                        <td>{{pessoa.endereco.logradouro}}</td>
                    </tr>
                    <tr>
                        <td>Número</td>
                        <td>{{pessoa.endereco.numero}}</td>
                    </tr>
                    <tr>
                        <td>Complemento</td>
                        <td>{{pessoa.endereco.complemento}}</td>
                    </tr>
                    <tr>
                        <td>Bairro</td>
                        <td>{{pessoa.endereco.bairro}}</td>
                    </tr>
                    <tr>
                        <td>CEP</td>
                        <td>{{pessoa.endereco.cep}}</td>
                    </tr>
                    <tr>
                        <td>Cidade</td>
                        <td>{{pessoa.endereco.cidade.nome}}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <button id="btnIncluir" type="submit" class="btn btn-primary">Incluir</button>
            </div>
        </div>
    </form>
{% endblock %}