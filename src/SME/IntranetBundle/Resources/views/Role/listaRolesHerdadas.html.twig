{% extends 'IntranetBundle:Index:administrador.html.twig' %}

{% block headerTitle %}Gerenciamento de permissões (roles){% endblock %}

{% block body %}
    <p>
        <strong>Nome de exibição:</strong> {{role.nomeExibicao}}
    </p>
    <p>
        <strong>Role:</strong> {{role.role}}
    </p>
    <p>
        <strong>Permissões herdadas:</strong>
    </p>
    <div id="divRoles">
        <table class="table table-striped table-hover tableRoles">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Role</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                {% for roleFilha in role.rolesHerdadas %}
                    <tr>
                        <td>{{roleFilha.nomeExibicao}}</td>
                        <td>{{roleFilha.role}}</td>
                        <td>
                            <a class="btn-link" href="{{url('intranet_admin_removerRoleHerdada', {'role': role.id, 'roleHerdada': roleFilha.id})}}">Remover</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <form method="post" action="{{url('intranet_admin_adicionarRoleHerdada', {'role': role.id})}}">
        <div class="row">
            <div class="col-lg-6">
                <div class="input-group">
                    <select id="roleHerdada" name="roleHerdada" class="form-control">
                        {% for roleHerdada in roles %}
                            <option value="{{roleHerdada.id}}">{{roleHerdada.nomeExibicao}} ({{roleHerdada.role}})</option>
                        {% endfor %}
                    </select>
                    <span class="input-group-btn">
                        <button id="btnAddRole" type="submit" class="btn btn-primary">+</button>
                    </span>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
