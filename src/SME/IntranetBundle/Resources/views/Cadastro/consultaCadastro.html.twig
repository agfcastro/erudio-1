{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block headerTitle %}Meu Perfil{% endblock %}

{% block body %}
    <form method="post" action="{{url('intranet_atualizarCadastro')}}">
        <div class="row">
            <div class="col-lg-6">
                <label>Nome: </label>
                <span class="form-control"> {{pessoa.nome}} </span>
            </div>
            <div class="col-lg-6">
                <label>CPF: </label>
                <span class="form-control"> {{pessoa.cpfCnpj|cpf}} </span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label>Data de Nascimento: </label>
                <span class="form-control">{{pessoa.dataNascimento|date('d/m/Y')}}</span>
            </div>
            <div class="col-lg-6">
                <label>RG:</label>
                <span class="form-control">{{pessoa.numeroRg}} / {{pessoa.orgaoExpedidorRg}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label>Estado Civil: </label>
                <span class="form-control"> {{pessoa.estadoCivil.nome}} </span>
            </div>
            <div class="col-lg-6">
                <label for="email">E-mail: </label>
                <input id="email" name="email" type="email" value="{{pessoa.email}}" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="telefone">Telefone: </label>
                <input id="telefone" name="telefone" type="text" placeholder="DDD + Número" value="{{pessoa.telefone.numero}}" class="form-control"/>
            </div>
            <div class="col-lg-6">
                <label for="celular">Celular: </label>
                <input id="celular" name="celular" type="text" placeholder="DDD + Número" value="{{pessoa.celular.numero}}" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="logradouro">Rua: </label>
                <input id="logradouro" name="logradouro" type="text" value="{{pessoa.endereco.logradouro}}" class="form-control"/>
            </div>
            <div class="col-lg-6">
                <label for="numero">Número: </label>
                <input id="numero" name="numero" type="text" value="{{pessoa.endereco.numero}}" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="complemento">Complemento: </label>
                <input id="complemento" name="complemento" type="text" value="{{pessoa.endereco.complemento}}" class="form-control"/>
            </div>
            <div class="col-lg-6">
                <label for="bairro">Bairro: </label>
                <input id="bairro" name="bairro" type="text" value="{{pessoa.endereco.bairro}}" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="cep">CEP: </label>
                <input id="cep" name="cep" type="text" value="{{pessoa.endereco.cep}}" class="form-control"/>
            </div>
            <div class="col-lg-6">
                <label for="cidade">Cidade: </label>
                <select id="cidade" name="cidade" type="text" class="form-control">
                    {% for cidade in cidades %}
                        {% if cidade.id == pessoa.endereco.cidade.id %}
                            <option value="{{cidade.id}}" selected>{{cidade.nome}}</option>
                        {% else %}
                            <option value="{{cidade.id}}">{{cidade.nome}}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row">
        	<div class="col-lg-6">
        		<label for="password">Modificar Senha: </label>
        		<input id="password" name="password" type="password" value="" class="form-control"/>
        	</div>
        	<div class="col-lg-6">
        		<label for="password">Repetir Senha: </label>
        		<input id="repeat_password" name="repeat_password" type="password" value="" class="form-control"/>
        	</div>
        </div>
        <br />
                <p class="alert alert-warning">Atenção: Somente informações para contato podem ser alteradas. Para alterar outros dados, contate a Diretoria de Gestão de Pessoas.</p>
        <div class="row">
            <div class="col-lg-12">
                <button id="btnAtualizar" type="submit" class="btn btn-primary">Atualizar</button>
            </div>
        </div>
    </form>
    
{% endblock %}

{% block javascript %}
	{{parent()}}
	<script type="text/javascript" src="{{asset('lib/jquery/validatePassword.js')}}"></script>	
{% endblock %}
