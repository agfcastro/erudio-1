{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block body %}
    <form action="{{path('dgp_ciGeral_incluirVinculos', {'ci': ci.id})}}" method="post">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Nome</th>
                    <th>Cargo</th>
                    <th>Carga Horária</th>
                    <th>Ativo</th>
                </tr>
            </thead>
            <tbody style="max-height: 100px;">
                {% for vinculo in vinculos %}
                    <tr>
                        <td>
                            <input name="vinculos[]" value="{{vinculo.id}}" type="checkbox" checked />
                        </td>
                        <td>{{vinculo.servidor.nome}}</td>
                        <td>{{vinculo.cargo.nome}}</td>
                        <td>{{vinculo.cargaHoraria}}</td>
                        <td>{% if vinculo.ativo %}Sim{% else %}Não{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <p>
            <button type="submit" class="btn btn-primary">Incluir</button>
        </p>
    </form>
{% endblock %}
