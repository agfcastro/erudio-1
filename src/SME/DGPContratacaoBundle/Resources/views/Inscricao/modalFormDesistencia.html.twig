{% extends '::templateModal.html.twig' %}

{% block modalTitle %} <h2>Termo de Desistência de Vaga</h2> {% endblock %}

{% block modalBody %}
    <form id="formDesistencia" method="post" action="{{url('dgp_processoAdmissao_imprimirTermoDesistencia', {'processo': inscricao.processo.id, 'inscricao': inscricao.id} )}}">
        <div class="row">
            <div class="col-lg-6">
                <label for="cargaHoraria">Carga Horária:</label>
                <select id="cargaHoraria" name="cargaHoraria" class="form-control" required >
                    {% for ch in 10..40  %}
                        <option value="{{ch}}">{{ch}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-lg-6">
                <label for="dataNomeacao">Data Nomeação:</label>
                <input id="dataNomeacao" name="dataNomeacao" type="text" class="form-control datepickerSME" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label for="convocacao">Convocação:</label>
                <select id="convocacao" name="convocacao" class="form-control" required >
                    {% for convocacao in convocacoes %}
                        <option value="{{convocacao.id}}">{{convocacao.nome}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary btn-block">Imprimir</button>
            </div>
        </div>
    </form>
{% endblock %}
