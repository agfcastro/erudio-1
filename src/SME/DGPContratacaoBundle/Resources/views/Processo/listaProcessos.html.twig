<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center">Processo</th>
            <th class="text-center">Edital</th>
            <th class="text-center">Tipo</th>
            <th class="text-center">Validade</th>
            <th class="text-center">Opções</th>
        </tr>
    </thead>
    <tbody>
        {% for processo in processos %}
            <tr>
                <td>{{processo.nome}}</td>
                <td class="text-center">{{processo.edital}}</td>
                <td class="text-center">{{processo.tipoProcesso.nome}}</td>
                <td class="text-center">{{processo.dataEncerramento|date('d/m/Y')}}</td>
                <td>
                    <a href="{{path('dgp_processoAdmissao_pesquisarInscricoes', {'processo': processo.id})}}">
                        <span class="glyphicon glyphicon-user" title="Inscrições"></span>
                    </a> |
                    <a href="{{path('dgp_convocacao_pesquisar', {'processo': processo.id})}}">
                        <span class="glyphicon glyphicon-bell" title="Convocações"></span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr> 
                <td colspan="5" class="text-center">Nenhum processo encontrado</td> 
            </tr>
        {% endfor %}
    </tbody>
</table>