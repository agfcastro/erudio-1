{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block headerTitle %}DGP > Processo Admissional > {{processo.nome}} > Convocações{% endblock %}

{% block body %}
    <ul class="nav nav-tabs">
        <li class="active"><a href="#">Pesquisa</a></li>
    </ul>
    {{form_start(form)}}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">Título</th>
                    <th class="text-center">Edital</th>
                    <th class="text-center">Ano</th>
                    <th class="text-center">Data de Realização</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> {{form_widget(form.nome, {'attr': {'class': 'form-control'} })}} </td>
                    <td> {{form_widget(form.numeroEdital, {'attr': {'class': 'form-control'} })}} </td>
                    <td> {{form_widget(form.anoEdital, {'attr': {'class': 'form-control'} })}}  </td>
                    <td> {{form_widget(form.dataRealizacao, {'attr': {'class': 'form-control datepickerSME'} })}} </td>
                    <td> {{form_widget(form.btnSalvar, {'attr': {'class': 'btn btn-primary'} })}} </td>
                </tr>
                {% for convocacao in convocacoes %}
                    <tr>
                        <td>{{convocacao.nome}}</td>
                        <td class="text-center" colspan="2">{{convocacao.edital}}</td>
                        <td class="text-center">{{convocacao.dataRealizacao|date('d/m/Y')}}</td>
                        <td>
                            <a href="#">
                                <span class="glyphicon glyphicon-edit" title="Alterar"></span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr> 
                        <td colspan="5" class="text-center">Nenhum edital de convocação encontrado</td> 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {{form_end(form)}}
{% endblock %}