{% extends app.request.isXmlHttpRequest ? '::templateAjax.html.twig' : '::template.html.twig' %}

{% block css %}
    {{parent()}}
{% endblock %}

{% block headerTitle %}<a href="{{ path('vagas_estagio') }}"><button style="margin-top: -5px;" class="btn btn-danger">Voltar</button></a> Vagas de Estágio - Editar{% endblock %}

{% block body %}
    <div class="row" id="formErrors">
        {{ erros | raw }}
    </div>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6"><strong>Etapa*</strong>{{ form_widget(form.titulo) }}</div>
            <div class="col-md-6"><strong>Modalidade*</strong>{{ form_widget(form.disciplina) }}</div>
            <div class="col-md-6"><strong>Unidade</strong>
                <select id="VagaForm_unidade" name="VagaForm_unidade" class="form-control">             
                    {% for unidade in unidades %}
                        <option value="{{ unidade.id }}">{{ unidade.nome }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-6"><strong>Turno*</strong>{{ form_widget(form.turno) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12"><strong>Vagas*</strong>{{ form_widget(form.totalVagas) }}</div>
            <div class="col-md-12"><strong>Descrição</strong>{{ form_widget(form.descricao) }}</div>
            <div class="col-md-12">{{ form_row(form.Salvar) }}</div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script type="text/javascript">
        $('document').ready(function (){
           $('option[value="{{ vaga.unidade }}"]').attr('selected','selected');
        });
    </script>
{% endblock %}
