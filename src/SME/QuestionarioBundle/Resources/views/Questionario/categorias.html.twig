{% extends app.request.isXmlHttpRequest ? '::templateAjax.html.twig' : '::template.html.twig' %}

{% block css %}
    {{parent()}}
{% endblock %}

{% block headerTitle %}Categorias de perguntas{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h3>Adicionar categoria de perguntas</h3>
            {{ form_start(form) }}
                <div class="row nova-categoria">
                    <div class="col-lg-12"><label for="CategoriaForm_nome">Nome da categoria: *</label></div>
                    <div class="col-lg-12">
                        {{ form_widget(form.nome) }}
                    </div>
                    <div class="col-lg-12"><label for="CategoriaForm_descricao">Descrição da categoria: *</label></div>
                    <div class="col-lg-12">
                        {{ form_widget(form.descricao) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.Salvar) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        
        <div class="col-md-12">
            <hr />
            <table class="table table-striped table-hover tableDGP">
                <thead>
                    <tr>
                        <th>Nome</td>
                        <th>Opções</td>
                    </tr>
                </thead>
                <tbody>
                    {% for categoria in categorias %}
                        <tr>
                            <td><a href="{{ path('categorias_editar', { 'id': categoria.id }) }}">{{ categoria.nome }}</a></td>
                            <td>
                                <a title='Ver Perguntas' href="{{ path('perguntas_index', { 'id': categoria.id }) }}"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                <a style="color:red;" href="{{ path('categorias_remover', { 'id': categoria.id }) }}"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Nenhuma categoria cadastrada</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script type="text/javascript">
        $('document').ready(function (){
           
        });
    </script>
{% endblock %}
