<div class="row">
    <div class="col-lg-6">
        <label>Status:</label>
        <span class="form-control">{{promocao.status.nome}}</span>
    </div>
    <div class="col-lg-6">
        <label>Data do pedido:</label>
        <span class="form-control">{{promocao.dataCadastro|date('d/m/Y')}}</span>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <label>Resposta:</label>
        <span class="form-control">{{promocao.resposta}}</span>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <label>Observações:</label>
        <span class="form-control">{{promocao.observacao}}</span>
    </div>
    <div class="col-lg-6">
        <label>A contar de:</label>
        <span class="form-control">{{promocao.dataInicio ? promocao.dataInicio|date('d/m/Y') : ''}}</span>
    </div>
</div>
    
<div class="panel panel-default" style="margin-top: 1em;">
    <div class="panel-heading">Formações</div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">Formação</th>
                    <th class="text-center">Instituição</th>
                    <th class="text-center">Data de Conclusão</th>
                    <th class="text-center">Carga Horária</th>
                </tr>
            </thead>
            <tbody>
                {% for f in promocao.formacoesInternas %}
                    <tr>
                        <td>{{f.matricula.formacao.nomeCertificado}}</td>
                        <td class="text-center">SME</td>
                        <td class="text-center">{{f.matricula.formacao.dataTerminoFormacao|date('d/m/Y')}}</td>
                        <td class="text-center">{{f.matricula.formacao.cargaHoraria}}</td>
                    </tr>
                {% endfor %}
                {% for f in promocao.formacoesExternas %}
                    <tr>
                        <td>{{f.nome}}</td>
                        <td class="text-center">{{f.instituicao}}</td>
                        <td class="text-center">{{f.dataConclusao|date('d/m/Y')}}</td>
                        <td class="text-center">{{f.cargaHoraria}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
