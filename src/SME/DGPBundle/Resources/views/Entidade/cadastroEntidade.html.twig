{% extends 'IntranetBundle:Index:servidor.html.twig' %}

{% block headerTitle %}DGP > Pessoas > Entidades{% endblock %}

{% block body %}
    <ul class="nav nav-tabs">
        <li {% if activeTab|default('1') == '1' %}class="active"{% endif %}> 
            <a href="{{ path('dgp_entidade_alterar', { 'entidade': entidade.id }) }}">Cadastro Básico</a>
        </li>
        <li {% if activeTab == '2' %}class="active"{% endif %}>
            <a href="{{ path('dgp_entidade_endereco_alterar', { 'entidade': entidade.id }) }}">Endereço</a>
        </li>
        <li {% if activeTab == '3' %}class="active"{% endif %}>
            <a href="{{ path('dgp_entidade_telefone_cadastrar', { 'entidade': entidade.id }) }}">Telefones</a>
        </li>
    </ul>
    <div id="tabContent" class="container">
        {% block tabContent %}{% endblock %}
    </div>
{% endblock %}
