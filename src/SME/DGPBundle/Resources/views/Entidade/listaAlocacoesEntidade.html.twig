{% extends '::templateModal.html.twig' %}

{% block modalTitle %} <h2>{{entidade.nome}}</h2> {% endblock %}

{% block modalBody %}
    {% if alocacoes is empty %}
        Nenhum servidor alocado nesta unidade
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Vínculo</th>
                    <th>Função</th>
                    <th>C.H.</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                {% for alocacao in alocacoes %}
                    <tr>
                        <td>{{alocacao.vinculoServidor.servidor.nome}}</td>
                        <td>{{alocacao.vinculoServidor.cargo.nome}} - {{alocacao.vinculoServidor.tipoVinculo.nome}} - {{alocacao.vinculoServidor.cargaHoraria}}h</td>
                        <td>{{alocacao.funcaoAtual}}</td>
                        <td>{{alocacao.cargaHoraria}}</td>
                        <td class="text-center">
                            <a class="removeAllocation" href="{{path('dgp_entidade_excluir_alocacao', {'alocacao': alocacao.id, 'entidade': entidade.id}) }}">
                                <span title="Desalocar" class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}    
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script type="text/javascript">
        $('.removeAllocation').click(function (ev) {
             ev.preventDefault();
             if(confirm('Deseja realmente desalocar este servidor?')) {
                 $.ajax({
                     url: $(this).attr('href'),
                     type: 'GET',
                     success: function (data) {
                         $('.modal-content').html(data);
                     }
                 });
             }
        });
    </script>
{% endblock %}