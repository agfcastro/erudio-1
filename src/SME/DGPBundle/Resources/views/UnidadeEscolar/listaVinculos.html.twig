{% extends 'IntranetBundle:Index:unidadeEscolar.html.twig' %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Servidor</th>
                <th class="text-center">Cargo</th>
                <th class="text-center">Tipo</th>
                <th class="text-center">Ano do Contrato</th>
                <th class="text-center">Carga Horária</th>
                <th class="text-center">Opções</th>
            </tr>
        </thead>
        <tbody style="max-height: 100px;">
            {% for vinculo in vinculos %}
                <tr>
                    <td class="text-center">{{vinculo.servidor.nome}}</td>
                    <td class="text-center">{{vinculo.cargo.nome}}</td>
                    <td class="text-center">{{vinculo.tipoVinculo.nome}}</td>
                    <td class="text-center">
                        {% if vinculo.tipoVinculo.id == 2 and vinculo.dataInicio %}
                            {{vinculo.dataInicio|date('Y')}}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-center">{{vinculo.cargaHoraria}}</td>
                    <td class="text-center">
                        <a href="{{url('dgp_unidade_formAlocacao', {'vinculo': vinculo.id})}}">Alocar</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6">Nenhum vínculo encontrado</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}