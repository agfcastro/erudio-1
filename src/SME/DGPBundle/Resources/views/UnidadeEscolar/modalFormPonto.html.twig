{% extends '::templateModal.html.twig' %}

{% block modalTitle %} Folha Individual de Registro de Comparecimento{% endblock %}

{% block modalBody %}
    <form id="formPonto" target="_blank" method="get" action="{{url('dgp_unidade_imprimirPonto')}}">
        <div class="row">
            <div class="col-lg-6">
                <label for="mes">Mês:</label>
                <select id="mes" name="mes" class="form-control">
                    <option value="1">Janeiro</option>
                    <option value="2">Fevereiro</option>
                    <option value="3">Março</option>
                    <option value="4">Abril</option>
                    <option value="5">Maio</option>
                    <option value="6">Junho</option>
                    <option value="7">Julho</option>
                    <option value="8">Agosto</option>
                    <option value="9">Setembro</option>
                    <option value="10">Outubro</option>
                    <option value="11">Novembro</option>
                    <option value="12">Dezembro</option>
                </select>
            </div>
            <div class="col-lg-6">
                <label for="ano">Ano:</label>
                <select id="ano" name="ano" class="form-control">
                    {% for ano in 2014..2020 %}
                        <option value="{{ano}}">{{ano}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary btn-block">Gerar folhas</button>
            </div>
        </div>
    </form>
{% endblock %}
